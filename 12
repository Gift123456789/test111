const SidebarItem = ({ icon: Icon, label, active }) => (
  <div className={`flex flex-col items-center justify-center py-4 cursor-pointer transition-colors ${active ? 'bg-white/10 border-l-4 border-white' : 'hover:bg-white/5'}`}>
